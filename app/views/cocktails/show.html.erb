<div class="container">

<h1><%= @cocktail.name %></h1>

<p class="well"><%= @cocktail.name %></p>
     <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill unless @cocktail.photo.url.nil? %>

<h4>List of Ingredients </h4>
 <ul>
   <% @cocktail.doses.each do |dose| %>
   <li>
     <strong>Ingredient:</strong> <%= Ingredient.find(dose.ingredient_id).name %>
     <strong>Dose:</strong> <%= dose.description %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                 <i class="fa fa-trash destroy_dose"></i>
               <% end %>
   <% end %>
   </li>
 </ul>

<hr>
<%= link_to cocktails_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
</div>

