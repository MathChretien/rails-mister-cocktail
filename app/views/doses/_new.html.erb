<%= simple_form_for(@cocktail) do |f| %>
 <% if @cocktail.errors.any? %>
   <div class="errors-container">
     <ul>
       <% @cocktail.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

 <!-- [...] all the fields -->

<div class="form-group">
  <%= f.input :ingredient_id, :collection => ['lemon', 'ice', 'mint leaves', 'love', 'cucumber', 'cocaine', 'orange', 'sugar', 'sex on the beach', 'one nigth stand'], class: 'form-control' %>
</div>


<%= f.submit class: 'btn btn-primary' %>
<% end %>
